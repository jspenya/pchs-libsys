<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <div class="inputContainer">
        <div class="card">
          <div class="card-body">
            <div class="addForm">
              <%= render 'shared/errors', object: @borrowed_book %>
              <%= form_for :borrowed_book, remote: true, url: { controller: :borrowed_books, action: :create } do |f| %>
                <div class="inputField">
                  <%= f.label :student, 'Student:' %><br>
                </div>
                <div style="text-align:left;">
                  <%= f.select :student_id, options_for_select(@students.collect { |s| [s.fullname, s.id] }), { include_blank: 'Select Student' }, required: 'true' %>
                </div>
                <div class="inputField">
                  <%= f.label :book, 'Book Title:' %>
                </div>
                <div style="text-align:left;">
                  <%= f.autocomplete_field :book_id, autocomplete_book_borrowed_books_path, :id_element => "#book_id", 'data-auto-focus' => true %>
                  <%= f.hidden_field :book_id, id:"book_id" %>
                </div>
                <%= f.submit 'Add Borrow Record', class:'addButton' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>

<script type="text/javascript">
</script>
