<thead class="bookTable">
  <tr>
    <th scope="col">Subject ID</th>
    <th scope="col">Subject Name</th>
    <th scope="col"></th>
    <th scope="col">Action</th>
    <th scope="col"></th>
  </tr>
</thead>

<tbody>
  <% subjects.each do |subject| %>
    <tr>
      <td><%= subject.id %></td>
      <td><%= subject.name %></td>
      <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
      <td><%= link_to 'Show', subject %></td>
      <td><%= link_to 'Delete', { action: :delete, id: subject.id }, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
