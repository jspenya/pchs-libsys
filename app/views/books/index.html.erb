<div class="container">
  <div class="row">
    <div class="col">
      <%# <h4>Subject Categories</h4> %>
      <%# <ul id="subjects"> %>
      <%# Subject.all.each do |c| %>
      <%# <li><%= link_to c.name, action: :show_subjects, id: c.id</li>  %>
      <%# end %>
      <%# </ul> %>
      <div class="booksContainer">
      <% if @user.admin? %>
        <div class="addbookContainer">
          <p><%= link_to "Add a Book", { action: :new }, class:"addbookButton" %></p>
        </div>
      <% end %>
      <% if @books.blank? %>
        <p>There are no books currently in the system.</p>
      <% else %>
        <div class="searchContainer">
          <div class="container">
            <%= form_tag(books_path, method: :get) do %>
              <b>Looking for a book?</b><br/> <%= text_field_tag :keyword, params[:keyword], class:"searchBox", placeholder: "ISBN or Book Title or Author Name" %> 
              <div class="submitTag">
              <%= submit_tag "Search", class: "searchfilterButton" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
        <% if @user.admin? %>
          <div class="container">
            <div class="row">
              <div class="col">
                <div class="filterOptions">
                  <%= link_to filter_book_path(subject_id: "1"), remote: true, class: "filterButton", title: "All Physics books" do %>
                    Physics (<%= @books.where(subject_id: 1).count %>)
                  <% end %>
                  <%= link_to filter_book_path(subject_id: "2"), remote: true, class: "filterButton", title: "All Math books" do %>
                    Mathematics (<%= @books.where(subject_id: 2).count %>)
                  <% end %>
                  <%= link_to filter_book_path(subject_id: "3"), remote: true, class: "filterButton", title: "All Chemistry books" do %>
                    Chemistry (<%= @books.where(subject_id: 3).count %>)
                  <% end %>
                  <%= link_to filter_book_path(subject_id: "4"), remote: true, class: "filterButton", title: "All Psychology books" do %>
                    Psychology (<%= @books.where(subject_id: 4).count %>)
                  <% end %>
                  <%= link_to filter_book_path(subject_id: "5"), remote: true, class: "filterButton", title: "All Geography books" do %>
                    Geography (<%= @books.where(subject_id: 5).count %>)
                  <% end %>
                  <%= link_to filter_book_path(subject_id: ""), remote: true, class: "filterButton", title: "All books" do %>
                    Show All (<%= @books.all.count %>)
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <div class="container">
            <div class="row">
              <div class="col">
                <div class="filterOptions">
                  <%= link_to stud_filter_book_path(subject_id: "1"), remote: true, class: "", title: "All Physics books" do %>
                    Physics (<%= @books.where(subject_id: 1).count %>) |
                  <% end %>
                  <%= link_to stud_filter_book_path(subject_id: "2"), remote: true, class: "", title: "All Math books" do %>
                    Mathematics (<%= @books.where(subject_id: 2).count %>) |
                  <% end %>
                  <%= link_to stud_filter_book_path(subject_id: "3"), remote: true, class: "", title: "All Chemistry books" do %>
                    Chemistry (<%= @books.where(subject_id: 3).count %>) |
                  <% end %>
                  <%= link_to stud_filter_book_path(subject_id: "4"), remote: true, class: "", title: "All Psychology books" do %>
                    Psychology (<%= @books.where(subject_id: 4).count %>) |
                  <% end %>
                  <%= link_to stud_filter_book_path(subject_id: "5"), remote: true, class: "", title: "All Geography books" do %>
                    Geography (<%= @books.where(subject_id: 5).count %>) |
                  <% end %>
                  <%= link_to stud_filter_book_path(subject_id: ""), remote: true, class: "", title: "All books" do %>
                    Show All (<%= @books.all.count %>)
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="container">
          <div class="row">
            <div class="col">
              <% if @user.admin? %>
                <table class="booksTable table table-responsive-md table-striped">
                    <%= render partial: "booksTable", locals: {books: @books} %>
                </table>
              <% else %>
                <table class="booksTableForStudents table table-responsive-md">
                  <%= render partial: "booksTableForStudents", locals: {books: @books} %>
                </table>
              <% end %>
            </div>
          </div>
        </div>
        <%#= will_paginate @books %>
      <% end %>
    </div>
  </div>
</div>

