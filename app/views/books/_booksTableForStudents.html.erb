  <thead class="bookTable">
    <tr>
      <th scope="col">ISBN</th>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Availability</th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><b><%= book.isbn %><b></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td>
          <% if book.is_available? %>
            Available
          <% else %>
            Not Available
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  