<h1>Edit book details</h1>
<%= form_for :book, remote: true, method: :PUT, url: {controller: :books, action: :update} do |f| %>
  <p>
    <%= f.label :title, 'Title:' %><br>
    <%= f.text_field :title, required: 'required' %><br>
  </p>
  <p>
    <%= f.label :author, 'Author:' %><br>
    <%= f.text_field :author, required: 'required' %><br>
  </p>
  <p>
    <%= f.label :subject, 'Subject:' %><br>
    <%= f.select :subject_id, options_for_select(@subjects.collect { |s| [s.name, s.id] }), prompt: true, required: 'required' %><br>
  </p>
  <p>
    <%= f.label :description, 'Description:' %><br>
    <%= f.text_area :description %><br>
  </p>
  <p>
    <%= f.label :image, 'Logo:' %><br>
    <%= f.file_field :image %><br>
    <!-- Helps to persist the image file across form redisplays -->
    <%= f.hidden_field :image_cache %>
  </p>
  <%= f.submit %>
<% end %>
<%= render 'shared/errors', object: @book %>
<%= link_to 'Back', { action: :index } %>
