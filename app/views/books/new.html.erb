<h1>Add new book</h1>
<%= form_for :book, remote: true, url: { controller: :books, action: :create } do |f| %>
  <p>
    <%= f.label :title, 'Title:' %><br>
    <%= f.text_field :title %><br>
  </p>
  <p>
    <%= f.label :author, 'Author:' %><br>
    <%= f.text_field :author %><br>
  </p>
  <p>
    <%= f.label :subject, 'Subject:' %><br>
    <%= f.select :subject_id, options_for_select(@subjects.collect { |s| [s.name, s.id] }), { include_blank: 'Select Subject' } %><br>
  </p>
  <p>
    <%= f.label :description, 'Description:' %><br>
    <%= f.text_area :description %><br>
  </p>
  <p>
    <%= f.label :image, 'Book Cover(Image):' %><br>
    <%= f.file_field :image %><br>
    <!-- Helps to persist the image file across form redisplays -->
    <%= f.hidden_field :image_cache %>
  </p>
  <%= f.submit %>
<% end %>
<h3>Import Books via CSV</h3>
<%= form_tag import_books_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag 'Upload Books' %>
<% end %>
<%= render 'shared/errors', object: @book %>
<%= link_to 'Back', { action: :index } %>
