<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <div class="inputContainer">
        <div class="card">
          <div class="card-body">
            <div class="addForm">
            <%= render 'shared/errors', object: @book %>
            <%= render 'books/form', book: @book %>
          </div>
          </div>
        </div>
        <div class="csvformContainer">
          <div class="card">
            <div class="card-body">
              <div class="addCsv">
                <div class="formTitle">
                  <h4>Add Books via CSV</h4>
                </div>
                <%= form_tag import_books_path, multipart: true do %>
                  <%= file_field_tag :file %>
                  <div style="float:right;">
                  <%= submit_tag 'Upload CSV', class: "addbookButton" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>
