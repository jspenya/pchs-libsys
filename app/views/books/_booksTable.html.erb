  <thead class="bookTable">
    <tr>
      <th scope="col">ISBN</th>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Availability</th>
      <th scope="col"></th>
      <th scope="col">Action</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><b><%= book.isbn %></b></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td>
          <% if book.is_available? %>
            Available
          <% else %>
            Not Available
          <% end %>
        </td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Delete', { action: :delete, id: book.id }, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
  