
<div class="container">
  <div class="row">
    <div class="col">
      <div class="studentsContainer">
        <% if @user.admin? %>
          <div class="addbookContainer">
            <p><%= link_to "Add a Student", { action: :new }, class:"addbookButton" %></p>
          </div>
        <% end %>
        <div class="searchContainer">
          <div class="container">
            <%= form_tag(students_path, method: :get, remote: true) do %>
              <b>Search a Student</b><br/> <%= text_field_tag :keyword, params[:keyword], class:"searchBox", placeholder: "Search by LRN or Student Name" %> 
              <div class="submitTag">
              <%= submit_tag "Search", class: "searchfilterButton" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col">
            <table class="studentsTable table table-responsive-md table-striped" id="studentsTable">
              <%= render partial: "studentsTable", locals: {students: @students} %>
            </table>
          </div>
        </div>
      </div>
      <%#= will_paginate @students %>
    </div>
  </div>
</div>
