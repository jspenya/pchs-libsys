<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <div class="inputContainer">
        <div class="card">
          <div class="card-body">
            <div class="addForm">
            <%= render 'shared/errors', object: student %>
            <%= form_for :student, remote: true, url: { controller: :students, action: :create } do |f| %>
              <div class="inputField">
                <%= f.label :lrn, 'Student LRN:' %>
              </div>
              <div class="">
                <%= f.text_field :lrn, required: 'required' %>
              </div>
              <div class="inputField">
                <%= f.label :firstname, 'First Name:' %>
              </div>
              <div class="">
                <%= f.text_field :firstname, required: 'required' %>
              </div>
              <div class="inputField">
                <%= f.label :lastname, 'Last Name:' %>
              </div>
              <div class="">
                <%= f.text_field :lastname, required: 'required' %>
              </div>
              <div class="inputField">
                <%= f.label :contact_number, 'Contact Number:' %>
              </div>
              <div class="">
                <%= f.text_field :contact_number %>
              </div>
              <%= f.submit 'Add Student', class:'addButton' %>
            <% end %>
          </div>
          </div>
        </div>
        <div class="csvformContainer">
          <div class="card">
            <div class="card-body">
              <div class="addCsv">
                <div class="formTitle">
                  <h4>Add Students via CSV</h4>
                </div>
                <%= form_tag import_students_path, multipart: true do %>
                  <%= file_field_tag :file %>
                  <div style="float:right;">
                  <%= submit_tag 'Upload CSV', class: "addbookButton" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>
